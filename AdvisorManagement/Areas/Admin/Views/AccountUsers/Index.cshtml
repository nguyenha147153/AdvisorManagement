                    <table id="zero_config" class="table table-hover table-light table-bordered" role="grid" aria-describedby="zero_config_info">
                        <thead>
                            <tr>
                                <th>Stt</th>
                                <th>Mã số</th>
                                <th>Họ tên</th>
                                <th>Chức vụ</th>
                                <th>Số điện thoại</th>
                                <th>Ngày tham gia</th>
                                <th>Email</th>
                                <th>Hoạt động</th>
                            </tr>
                        </thead>
                        <tbody id="myTable">
                            @if (ViewBag.menu != null)
                            {
                                int i = 1;
                                foreach (var item in Model)
                                {
                                        <tr id="@item.id">
                                            <td>@i</td>
                                            <td>@item.user_code</td>
                                            <td>@item.user_name</td>
                                            <td>@item.Role.role_name_vn</td>

                                            @if (item.phone != null || item.phone == "")
                                            {
                                                <td>
                                                    @item.phone
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    Chưa cập nhật số điện thoai
                                                </td>
                                            }

                                                <td>
                                                    @if (item.create_time.HasValue)
                                                    {
                                                        @item.create_time.Value.ToString("dd-MM-yyyy hh:mm")
                                                    }
                                                </td>
                                                <td>@item.email</td>
                                                <td style="width:250px">
                                                    <a name="detail" class="btn btn-success"
                                                       style="margin-bottom: 5px; margin-left: 5px; color: white">
                                                        Chi tiết <i class="fas fa-tasks"></i>
                                                    </a>
                                                    <a name="update" id="update" class="btn btn-info" style="margin-bottom: 5px; margin-left: 5px;">
                                                        Sửa <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a name="delete" id="btnDelete" class="btn btn-danger"
                                                       style="margin-bottom: 5px; margin-left: 5px;">
                                                        Xoá <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                    i++;
                                }
                            }
