         },
         'columns':
             [
                 { 'data': 'id', 'width': '5%', },
                 { 'data': 'rank_type', 'width': '10%'},
                 { 'data': 'rank_des', 'width': '40%' },
                 { 'data': 'description', 'width': '40%' },
                 { 'data': 'rank_count', 'width': '10%' },
                 { 'data': 'rank_end', 'width': '10%' },
             ],
            "autoWidth": false,
            "aLengthMenu": [[-1], ["All"]],
            "bLengthChange": false,
            "bPaginate": false,
            "bInfo": false,
       });
