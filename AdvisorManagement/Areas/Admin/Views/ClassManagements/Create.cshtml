@model AdvisorManagement.Models.VLClass

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layoutvlu.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{


    <div class="form-horizontal">
        <h4>VLClass</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="return" class="form-group">
            <p id="labelclass" class="control-label col-md-2">Lớp học</p>
            <div class="col-7">
                @Html.DropDownList("class_code", null, new { htmlAttributes = new { @class = "form-control" } })
