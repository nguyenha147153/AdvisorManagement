                <a id="buttonadd" class="btn btn-primary" onclick="myFunctionadd()">
                    thêm
                </a>
            </div>
           
        </div>
        <div class="form-group" id="demo" style="display:none">
            <p id="labelclass" class="control-label col-md-2">Lớp học</p>
            <div class="col-7">
                @Html.EditorFor(model => model.class_code, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.class_code, "", new { @class = "text-danger" })
                <a id="buttoreturn" class="btn btn-primary" onclick="myFunctionreturn()">
                    quay lại
                </a>
            </div>
           
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.advisor_code, "Giảng viên", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("advisor_code", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.advisor_code, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

