                    <ul class="navbar-nav float-end">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-muted waves-effect waves-dark pro-pic"
                               href="#"
                               id="navbarDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                @if (Request.IsAuthenticated)
                                {<img src="@Url.Content(ViewBag.avatar+" ")"
                                      alt="user"
                                      class="rounded-circle"
                                      width="31" />
                                }
                                else
                                {
                                    <img src="~/Assets/images/users/1.jpg"
                                         alt="user"
                                         class="rounded-circle"
                                         width="31" />
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end user-dd animated" aria-labelledby="navbarDropdown">
                                @if (Request.IsAuthenticated)
                                {
                                    <a class="dropdown-item" href="@Url.Action("UserProfile", "Home", new { id = "", email = User.Identity.Name })">
                                        <i class="mdi mdi-account me-1 ms-1"></i> My
                                        Profile
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("SignOut", "Account",new {area = ""})"><i class="fa fa-power-off me-1 ms-1"></i> Logout</a>
                                    <div class="dropdown-divider"></div>
                                    <div class="ps-4 p-10">
