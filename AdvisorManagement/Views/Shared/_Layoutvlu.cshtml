            <footer class="footer text-center">
                All Rights Reserved by K25 CAPTEAM09. Designed and Developed by
                <a href="#">CAPTEAM 09</a>.
            </footer>
            <!-- ============================================================== -->
            <!-- End footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
    </div>
