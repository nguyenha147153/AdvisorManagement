        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <aside class="left-sidebar" data-sidebarbg="skin5">
            <!-- Sidebar scroll-->
            <div class="scroll-sidebar">
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav">
                    <ul id="sidebarnav" class="pt-4">
                        @if (ViewBag.menu != null)
                        {
                            List<AdvisorManagement.Models.ViewModel.MenuItem> listProduct = (List<AdvisorManagement.Models.ViewModel.MenuItem>)ViewBag.menu;
                            foreach (var item in listProduct)
                            {
                                switch (item.menuName)
                                {
                                    case "Trang chủ":
                                        // Flag
                                        <li class="sidebar-item">
                                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                                               href="~/@item.actionLink/Index"
                                               aria-expanded="false">
                                                <i class="fas fa-home"></i><span class="hide-menu" style="margin-left: 3px">@item.menuName</span>
                                            </a>
                                        </li>
                                        break;
                                    case "Thông báo":
                                        // flag
                                        <li class="sidebar-item">
                                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                                               href="~/@item.actionLink/Index"
                                               aria-expanded="false">
                                                <i class="far fa-bell"></i><span class="hide-menu" style="margin-left: 3px">@item.menuName</span>
                                            </a>
                                        </li>
                                        break;
                                    case "Danh sách lớp":
                                        // Flag
                                        <li class="sidebar-item">
                                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                                               href="~/@item.actionLink/Index"
                                               aria-expanded="false">
                                                <i class="fas fa-list-alt"></i><span class="hide-menu" style="margin-left: 3px">@item.menuName</span>
                                            </a>
                                        </li>
                                        break;
                                    case "Thông tin lớp":
                                        // Flag
                                        <li class="sidebar-item">
                                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                                               href="~/@item.actionLink/Index"
                                               aria-expanded="false">
                                                <i class="fas fa-address-book"></i><span class="hide-menu" style="margin-left: 3px">@item.menuName</span>
                                            </a>
                                        </li>
                                        break;
                                    case "Tư vấn và trao đổi":
                                        // flag
                                        <li class="sidebar-item">
                                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                                               href="~/@item.actionLink/Index"
                                               aria-expanded="false">
                                                <i class="far fa-comment"></i><span class="hide-menu" style="margin-left: 3px">@item.menuName</span>
                                            </a>
                                        </li>
                                        break;
                                    case "Kế hoạch đầu học kì":
                                        //flag
                                        <li class="sidebar-item">
                                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                                               href="~/@item.actionLink/Index"
                                               aria-expanded="false">
                                                <i class="fas fa-calendar-alt"></i><span class="hide-menu" style="margin-left: 3px">@item.menuName </span>
                                            </a>
                                        </li>
                                        break;
                                    case "Người dùng":
                                        // Flag
                                        <li class="sidebar-item">
                                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                                               href="~/@item.actionLink/Index"
                                               aria-expanded="false">
                                                <i class="fas fa-user"></i><span class="hide-menu" style="margin-left: 3px">@item.menuName</span>
                                            </a>
                                        </li>
                                        break;

                                    case "Thống kê":
                                        <li class="sidebar-item">
                                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                                               href="~/@item.actionLink/Index"
                                               aria-expanded="false">
                                                <i class="fas fa-chart-bar"></i><span class="hide-menu" style="margin-left: 3px">@item.menuName</span>
                                            </a>
                                        </li>
                                        break;
                                    case "Báo cáo cuối học kì":
                                        @*  <ul aria-expanded="false" class="collapse first-level">*@
                                        <li class="sidebar-item">
                                            <a href="~/@item.actionLink/Index" class="sidebar-link">
                                                <i class="mdi mdi-calendar-check"></i><span class="hide-menu"> @item.menuName </span>
                                            </a>
                                        </li>
                                        @* </ul>*@
                                        break;
                                    case "Xử lí học tập":
                                        @*<li class="sidebar-item">
                                            <ul aria-expanded="false" class="collapse second-level">*@
                                        <li class="sidebar-item">
                                            <a href="~/@item.actionLink/Index" class="sidebar-link">
                                                <i class="mdi mdi-calendar-check"></i><span class="hide-menu"> @item.menuName </span>
                                            </a>
                                        </li>
                                        @*</ul>
                                            </li>*@
                                        break;
                                    case "Cài đặt":
                                        @* <ul aria-expanded="false" class="collapse first-level">*@
                                        <li class="sidebar-item">
                                            <a class="sidebar-link has-arrow waves-effect waves-dark"
                                               href="~/@item.actionLink/Index"
                                               aria-expanded="false">
                                                <i class="fas fa-cog"></i><span class="hide-menu" style="margin-left: 3px">
                                                    @item.menuName
                                                </span>
                                            </a>
                                        </li>
                                        @*</ul>*@

                                        break;
                                    case "Phân quyền":
                                        <li class="sidebar-item">
                                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                                               href="~/@item.actionLink/Index"
                                               aria-expanded="false">
                                                <i class="mdi mdi-emoticon"></i><span class="hide-menu"> @item.menuName </span>
                                            </a>
                                        </li>
                                        break;
                                    case "Menu":
                                        <li class="sidebar-item">
                                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                                               href="~/@item.actionLink/Index"
                                               aria-expanded="false">
                                                <i class="fas fa-tasks"></i><span class="hide-menu" style="margin-left: 3px">
                                                    @item.menuName
                                                </span>
                                            </a>
                                        </li>

                                        break;
                                }
                            }
                        }
                        @* Merge *@

                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
