
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutvlu.cshtml";
}

<div class="col-md-15">
    <div class="divmain">
        <div>
            <div>
                <table width="100%" class="table table-bordered table-striped table-responsive">
                    <div class="card-body p-3">
                        <div class="card-text content mt-3">
                            <h2>Gửi thông báo</h2>
                            <span id="messages" class="warning"></span>
                            <hr />

                            <div class="form-group">
                                <label for="email">Gửi đến:</label>
                                <input type="email" class="form-control" id="toUser" value="" placeholder="ha.197pm09438@vanlanguni.vn" />
                            </div>
                            <div class="form-group">
                                <label for="pwd">Tiêu đề:</label>
                                <input type="text" class="form-control" id="myTitle" value="" placeholder="Title" />
                            </div>
                            <div class="form-group">
                                <label for="pwd">Nội dung:</label>
                                <input type="text" class="form-control" id="myMessage" value="" placeholder="Message" />
                            </div>

                            <button type="submit" class="btn btn-default" id="submit">Gửi</button>
                        </div>
                    </div>

                </table>
            </div>
        </div>
    </div>
</div>


    <script>
        $("#submit").click(function (e) {
            e.preventDefault();

            var message = $("#myMessage").val();
            var sendtouser = $("#toUser").val();
            var title = $("#myTitle").val();

            //$("#messages").append("<p>" + message + "</p>");

            var Notification = { userID: sendtouser, title: title, message: message };

            $.ajax({
                type: "POST",
                url: "/Announcement/SendNotification",
                data: JSON.stringify(Notification),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    Swal.fire(
                        'Thông báo',
                        data.message
                    )
                    $("#toUser").val("");
                    $("#myTitle").val("");
                    $("#myMessage").val("");
                },
                error: function () {
                    alert("Error occured!!")
                }
            });

        });
    </script>

