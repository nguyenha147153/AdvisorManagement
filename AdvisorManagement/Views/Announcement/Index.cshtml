<script>
    $("#submit").click(function (e) {
        e.preventDefault();

        var message = $("#myMessage").val();
        var sendtouser = $("#toUser").val();
        var title = $("#myTitle").val();

        //$("#messages").append("<p>" + message + "</p>");

        var Notification = { userID: sendtouser, title: title, message: message };

            $.ajax({
                type: "POST",
                url: "/Announcement/SendNotification",
                data: JSON.stringify(Notification),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    Swal.fire(
                        'Thông báo',
                        data.message
                    )
                    $("#toUser").val("");
                    $("#myTitle").val("");
                    $("#myMessage").val("");
                },
                error: function () {
                    alert("Error occured!!")
                }
            });

    });
</script>

