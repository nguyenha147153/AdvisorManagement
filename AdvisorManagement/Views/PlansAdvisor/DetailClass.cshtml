<script>
        //Lấy data khi vừa vào web
         var dataTable = $("#zero_config").DataTable({
         'ajax': {
                'url': '@Url.Action("GetDataAdvisor", "PlansAdvisor")',
                'data': function (d) {               
                    d.year = @yearNow;
                     d.id_class = @id_class;       
                 },
                'type': 'get',
                'datatype':'json',
         },
         'columns':
             [
                 { 'data': 'number_title', 'width': '5%' },
                 { 'data': 'content', 'width': '25%' },                 
                 { 'data': 'hk1', 'width': '5%', 'defaultContent': ''},
                 { 'data': 'hk2', 'width': '5%' },
                 { 'data': 'hk3', 'width': '5%' },
                 { 'data': 'describe', 'width': '30%' },
                 { 'data': 'source', 'width': '35%' },
                 { 'data': 'note', 'width': '10%' },
                 {
                     'data': 'id', 'width': '20%', 'render': function (data) {
                         return '<button onclick="Update(' + data + ')" class="btn btn-success">Sửa <i class="fas fa-tasks" ></i></button > <button onclick="Delete(' + data + ')" class="btn btn-danger" >Xóa <i class="fas fa-trash-alt" ></i ></button > <a id="proof" href="@Url.Action("Details", "PlansAdvisor")/' + data + '/" class="btn btn-info">Minh chứng <i class="fas fa-edit"></i></a>'
                     }
                 },
             ]
        });       

        function CreateTitle() {
            $("#modalCreate").modal("show");
        }

        function CopyTemplate() {
            $("#modalCopy").modal("show");
        }

        function HideModal() {
            $("#modalCreate").modal("hide");
    }

        //Lấy thông tin người dùng để cập nhật
         function Update(id) {
              $.ajax({
                    url:'@Url.Action("UpdateAdvisor", "PlansAdvisor")',
                    type: 'get',
                    data: {
                        id: id
                    },
                    success: function (data) {
                        if (data.success == true) {
                            $('#up_Title').val(data.T.number_title);
                            $('#up_Content').val(data.T.content);
                            $('#up_HK1').val(data.T.hk1);
                            $('#up_HK2').val(data.T.hk2);
                            $('#up_HK3').val(data.T.hk3);
                            $('#up_Describe').val(data.T.describe);
                            $('#up_Source').val(data.T.source);
                            $('#up_Note').val(data.T.note);
                            $('#id_title').val(data.T.id);
                            $('#modalUpdate').modal("show");
                        } else {
                            alert(data.message);
                        }
                    }
                })
         }

         //Cập nhật thông tin người dùng
        $('#btnEdit').click(function () {
                let id = $('#id_title').val();
                let numTitle = $('#up_Title').val();
                let content = $('#up_Content').val();
                let hk1 = $('#up_HK1').val();
                let hk2 = $('#up_HK2').val();
                let hk3 = $('#up_HK3').val();
                let describe = $('#up_Describe').val();
                let source = $('#up_Source').val();
                let note = $('#up_Note').val();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("UpdateTittleAdvisor", "PlansAdvisor")',
                    data: {
                        id: id,
                        numTitle: numTitle,
                        content: content,
                        hk1: hk1,
                        hk2: hk2,
                        hk3: hk3,
                        describe: describe,
                        source: source,
                        note: note,                       
                    },
                    success: function (data) {
                            if (data.success == true) {
                                alert(data.message);
                                $('#modalUpdate').modal('hide');
                                dataTable.ajax.reload()
                            } else {
                                alert(data.message);
                            }
                        }
                     })
            })

        function HideModalUp() {
            $("#modalUpdate").modal("hide");
            $("#modalAssignment").modal("hide");
        }

        function HideModalCopy() {
            $("#modalCopy").modal("hide");
        }


         $(document).ready(function () {
        $('#btnUpload').click(function () {
            var formData = new FormData();
            var idtitle = $("#txtIDTitle").val();
            var content = $("#txtContent").val();
            var describe = $("#txtDescribe").val();
            var source = $("#txtSource").val();
            var note = $("#txtNote").val();
            var year = @yearNow;
            var id_class = @id_class;
            formData.append("idtitle", idtitle);
            formData.append("content", content);
            formData.append("describe", describe);
            formData.append("source", source);
            formData.append("note", note);
            formData.append("year", year);
            formData.append("id_class", id_class);
            $.ajax({
                type: 'POST',
                url: '@Url.Action("CreateTitleAdvisor", "PlansAdvisor")',
                contentType: false,
                processData: false,
                data: formData,
                success: function (data) {
                    if (data.success == false) {
                        alert(data.message);
                    } else {
                        $("#txtIDTitle").val("1");
                        $("#txtContent").val("");
                        $("#txtDescribe").val("");
                        $("#txtSource").val("");
                        $("#txtNote").val("");
                        $("#modalCreate").modal("hide");
                        alert(data.message);
                        dataTable.ajax.reload()
                    }
                }
             })
        })
         })

         //Sự kiện xóa
         function Delete(id) {
             if (confirm("Bạn thực sự muốn xóa sinh viên này?")) {
                $.ajax({
                    url: '@Url.Action("DeleteTitleAdvisor", "PlansAdvisor")',
                    type: 'POST',
                    data: {
                        id: id
                    },
                    success: function (data) {
                         if (data.success == true) {
                             alert(data.message);
                             dataTable.ajax.reload()
                         } else {
                             alert(data.message);
                         }
                    }
                })
            }
         }
        

        //Export template
        function ExportTemplate() {           
            $.ajax({
                url: '@Url.Action("ExportTemplateAdvisor", "PlansAdvisor")',
                type: 'POST',
                data: {
                    year: @yearNow,
                    id_class: @id_class
                },
                /*contentType: "application/json; charset=utf-8", */
                success: function (data) {
                    var bytes = new Uint8Array(data.FileContents);
                    var blob = new Blob([bytes], { type: 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' });
                    var downloadUrl = URL.createObjectURL(blob);
                    var a = document.createElement("a");
                    a.href = downloadUrl;
                    a.download = data.FileDownloadName;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                },
                error: function (err) {
                    alert(err);
                },
            })
        }    
</script>

