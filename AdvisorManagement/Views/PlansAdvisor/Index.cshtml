@model IEnumerable<AdvisorManagement.Models.PlanAdvisor>
@using AdvisorManagement.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutvlu.cshtml";

    List<PlanAdvisor> listYear = (List<PlanAdvisor>)ViewBag.listYear;
    var yearNow = (int)Session["yearNow"];
    var roleABC = (string)Session["role"];
}
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-0">Quản lí kế hoạch đầu học kì</h5>
                </div>
                @if (ViewBag.role == "Admin")
                {
                    <div class="page-breadcrumb">
                        <div class="row">
                            <div class="col-12 d-flex no-block align-items-center">
                                <a onclick="CreateTitle()" id="create" class="btn btn-success" style="margin-bottom: 5px; margin-left: 5px; width: 150px;">
                                    Tạo đề mục<i style="margin-left:5px" class="fas fa-plus"></i>
                                </a>
                                @*<a onclick="CopyTemplate()" class="btn btn-success" style="margin-bottom: 5px; margin-left: 5px; width: 150px;">
                                        Copy Template<i class="fas fa-plus"></i>
                                    </a>*@
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    @if (ViewBag.role == "Admin")
                    {
                        <div class="">
                            <label for="cars">Năm học:</label>

                            <select id="semester" name="semester" onchange="myFunction()">
                                <option selected value="@yearNow">@yearNow - Hiện tại</option>
                                @foreach (var item in listYear)
                                {
                                    <option value="@item.year">@item.year</option>
                                }
                            </select>
                            <button hidden id="copy" name="copy" class="btn btn-success" style="margin-left: 5px; width: 150px; height: 35px">
                                Copy Template <i class="fas fa-copy"></i>
                            </button>
                        </div>
                    }

                    @if (ViewBag.role == "Advisor")
                    {
                        <select hidden id="semester" name="semester">
                            <option selected value="@yearNow">@yearNow - Hiện tại</option>
                        </select>
                        <div style="margin-top:10px">
                            <i class="fa fa-check" style="color:limegreen"></i>: Cố vấn đã thực hiện nộp minh chứng
                        </div>
                    }
                    <div class="table-responsive" style="margin-top:10px">
                        <table width="100%" id="zero_config" class="table table-striped table-bordered" role="grid" aria-describedby="zero_config_info">
                            <thead>
                                <tr>
                                    <th style="text-align:center">STT</th>
                                    <th style="text-align:center">Nội dung</th>
                                    @if (ViewBag.role == "Advisor")
                                    {
                                        <th style="text-align:center">HK1</th>
                                        <th style="text-align:center">HK2</th>
                                        <th style="text-align:center">HK3</th>
                                    }
                                    <th style="text-align:center">Mô tả công việc</th>
                                    <th style="text-align:center">Tài nguyên chuẩn bị</th>
                                    <th style="text-align:center">Ghi chú</th>
                                    <th hidden>year</th>
                                    <th style="text-align:center" id="action">Hoạt động</th>

                                </tr>
                            </thead>
                            @if (ViewBag.role == "Advisor")
                            {
                                <tbody id="myTable">
                                    @foreach (var item in Model)
                                    {
                                        <tr id="@item.id">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.number_title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.content)
                                            </td>
                                            @if (ViewBag.listProof != null)
                                            {
                                                List<ProofPlan> proofPlans = (List<ProofPlan>)ViewBag.listProof;

                                                <td style="text-align:center">
                                                    @foreach (var i in proofPlans)
                                                    {
                                                        if (i.id_titleplan == item.id && i.semester.Trim() == "Học kỳ 1")
                                                        {
                                                            <i class="fa fa-check" style="color:limegreen"></i>
                                                            break;
                                                        }

                                                    }
                                                </td>
                                                <td>
                                                    @foreach (var i in proofPlans)
                                                    {
                                                        if (i.id_titleplan == item.id && i.semester.Trim() == "Học kỳ 2")
                                                        {

                                                            <i class="fa fa-check" style="color:limegreen"></i>
                                                            break;
                                                        }
                                                    }
                                                </td>
                                                <td>
                                                    @foreach (var i in proofPlans)
                                                    {
                                                        if (i.id_titleplan == item.id && i.semester.Trim() == "Học kỳ 3")
                                                        {
                                                            <i class="fa fa-check" style="color:limegreen"></i>
                                                            break;
                                                        }
                                                    }
                                                </td>

                                            }
                                            <td>
                                                @Html.DisplayFor(modelItem => item.describe)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.source)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.note)
                                            </td>
                                            <td hidden>@Html.DisplayFor(modelItem => item.year)</td>

                                            <td width="200">
                                                <a href="@Url.Action("Details", "PlansAdvisor", new { id = item.id })" id="btnUpdate" class="btn btn-info" style="margin-bottom: 5px; margin-left: 5px;">
                                                    Minh chứng <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="modalCreate" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Thêm đề mục</h4>
                </div>
                <div class="">
                    <div class="col-md-12" style="padding-bottom: 12px;padding-top: 12px; padding-left:15px">
                        <div class="col-md-4"><span>Số đề mục:</span></div>
                        <div class="col-md-8">
                            <input id="txtIDTitle" type="number" class="form-control" min="1" value="1" />
                        </div>
                    </div>
                </div>
                <div class="">
                    <div class="col-md-12" style="padding-bottom: 12px; padding-top: 12px; padding-left: 15px">
                        <div class="col-md-4"><span>Nội dung:</span></div>
                        <div class="col-md-8">
                            <input id="txtContent" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="">
                    <div class="col-md-12" style="padding-bottom: 12px; padding-top: 12px; padding-left: 15px">
                        <div class="col-md-4"><span>Mô tả:</span></div>
                        <div class="col-md-8">
                            <input id="txtDescribe" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="">
                    <div class="col-md-12" style="padding-bottom: 12px; padding-top: 12px; padding-left: 15px">
                        <div class="col-md-4"><span>Tài nguyên:</span></div>
                        <div class="col-md-8">
                            <input id="txtSource" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="">
                    <div class="col-md-12" style="padding-bottom: 12px; padding-top: 12px; padding-left: 15px">
                        <div class="col-md-4"><span>Ghi chú:</span></div>
                        <div class="col-md-8">
                            <input id="txtNote" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button onclick="HideModal()" type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <button id="btnUpload" class="btn btn-primary" type="submit">Thêm</button>
                </div>

            </div>
        </div>
    </div>

    <div id="modalUpdate" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Chỉnh sửa đề mục</h4>
                </div>
                <input hidden id="id_title" value="" />
                <div class="">
                    <div class="col-md-12" style="padding-bottom: 12px;padding-top: 12px; padding-left:15px">
                        <div class="col-md-4"><span>Số đề mục:</span></div>
                        <div class="col-md-8">
                            <input id="up_Title" type="number" class="form-control" min="1" />
                        </div>
                    </div>
                </div>
                <div class="">
                    <div class="col-md-12" style="padding-bottom: 12px; padding-top: 12px; padding-left: 15px">
                        <div class="col-md-4"><span>Nội dung:</span></div>
                        <div class="col-md-8">
                            <input id="up_Content" type="text" class="form-control" />
                        </div>
                    </div>
                </div>             
                <div class="">
                    <div class="col-md-12" style="padding-bottom: 12px; padding-top: 12px; padding-left: 15px">
                        <div class="col-md-4"><span>Mô tả:</span></div>
                        <div class="col-md-8">
                            <input id="up_Describe" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="">
                    <div class="col-md-12" style="padding-bottom: 12px; padding-top: 12px; padding-left: 15px">
                        <div class="col-md-4"><span>Tài nguyên:</span></div>
                        <div class="col-md-8">
                            <input id="up_Source" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="">
                    <div class="col-md-12" style="padding-bottom: 12px; padding-top: 12px; padding-left: 15px">
                        <div class="col-md-4"><span>Ghi chú:</span></div>
                        <div class="col-md-8">
                            <input id="up_Note" type="text" class="form-control" />
                        </div>
                    </div>
                </div>



                <div class="modal-footer">
                    <button onclick="HideModalUp()" type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <button id="btnEdit" class="btn btn-primary" type="submit">Sửa</button>
                </div>

            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Right sidebar -->
    <!-- ============================================================== -->
    <!-- .right-sidebar -->
    <!-- ============================================================== -->
    <!-- End Right sidebar -->
    <!-- ============================================================== -->
</div>
<script src="~/Assets/extra-libs/DataTables/datatables.js"></script>
<script src="~/Assets/extra-libs/DataTables/datatables.min.js"></script>
<script>
         //Lấy data khi vừa vào web
         var dataTable = $("#zero_config").DataTable({
         'ajax': {
                'url': '@Url.Action("GetData", "PlansAdvisor")',
                'data': function (d) {
                 var input = document.getElementById("semester");
                 filter = input.value.toUpperCase();
                 d.year = filter ;
                 },
                'type': 'get',
                'datatype':'json',
         },
         'columns':
             [
                 { 'data': 'number_title', 'width': '5%' },
                 { 'data': 'content', 'width': '25%' },
                 { 'data': 'describe', 'width': '30%' },
                 { 'data': 'source', 'width': '25%' },
                 { 'data': 'note', 'width': '10%' },
                 {
                     'data': 'id', 'width': '30%', 'render': function (data) {
                         return '<button onclick="Update(' + data + ')" class="btn btn-success">Sửa <i class="fas fa-tasks" ></i></button > <button onclick="Delete(' + data + ')" class="btn btn-danger" >Xóa <i class="fas fa-trash-alt" ></i ></button > <a id="proof" href="@Url.Action("Details", "PlansAdvisor")/' + data + '/" class="btn btn-info">Minh chứng <i class="fas fa-edit"></i></a>'
                     }
                 },
             ]
        });

        //filter data khi chọn năm-->-->-->-->
        function myFunction() {
            var input = document.getElementById("semester");
            filter = input.value.toUpperCase();
            if (filter != @yearNow) {
                seleclYear()
            } else {
                selectYearNow()
            }
        }

        function seleclYear() {
            $("#zero_config").dataTable().fnDestroy();
             $("#zero_config").DataTable({
             'ajax': {
                    'url': '@Url.Action("GetData", "PlansAdvisor")',
                    'data': function (d) {
                     var input = document.getElementById("semester");
                        filter = input.value.toUpperCase();
                     d.year = filter ;
                     },
                    'type': 'get',
                    'datatype':'json',
                 },
             'columns':
                 [
                     { 'data': 'number_title', 'width': '5%' },
                     { 'data': 'content', 'width': '25%' },
                     { 'data': 'describe', 'width': '30%' },
                     { 'data': 'source', 'width': '25%' },
                     { 'data': 'note', 'width': '30%' },
                     {
                         'data': 'id', 'visible': false, 'render': function (data) {
                                 document.getElementById("copy").hidden = false;
                                 document.getElementById("action").hidden = true;
                                 return ''
                         }
                     },
                     ],
             });
        }

        function selectYearNow() {
            $("#zero_config").dataTable().fnDestroy();
             $("#zero_config").DataTable({
             'ajax': {
                    'url': '@Url.Action("GetData", "PlansAdvisor")',
                    'data': function (d) {
                     var input = document.getElementById("semester");
                     filter = input.value.toUpperCase();
                     d.year = filter ;
                     },
                    'type': 'get',
                    'datatype':'json',
             },
             'columns':
                 [
                     { 'data': 'number_title', 'width': '5%' },
                     { 'data': 'content', 'width': '25%' },
                     { 'data': 'describe', 'width': '30%' },
                     { 'data': 'source', 'width': '25%' },
                     { 'data': 'note', 'width': '10%' },
                     {
                         'data': 'id', 'width': '30%', 'render': function (data) {
                             document.getElementById("action").hidden = false;
                             document.getElementById("copy").hidden = true;
                             return '<button onclick="Update(' + data + ')" class="btn btn-success">Sửa <i class="fas fa-tasks" ></i></button > <button onclick="Delete(' + data +')" class="btn btn-danger" >Xóa <i class="fas fa-trash-alt" ></i ></button > <a id="proof" href="@Url.Action("Details", "PlansAdvisor")/'+ data +'/" class="btn btn-info">Minh chứng <i class="fas fa-edit"></i></a>'
                         }
                     },
                 ]
            });
        }

        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        function CreateTitle() {
            $("#modalCreate").modal("show");
        }

        function CopyTemplate() {
            $("#modalCopy").modal("show");
        }

        function HideModal() {
            $("#modalCreate").modal("hide");
    }

        //Lấy thông tin người dùng để cập nhật
         function Update(id) {
              $.ajax({
                    url:'@Url.Action("Update", "PlansAdvisor")',
                    type: 'get',
                    data: {
                        id: id
                    },
                    success: function (data) {
                        if (data.success == true) {
                            $('#up_Title').val(data.T.number_title);
                            $('#up_Content').val(data.T.content);
                            $('#up_Describe').val(data.T.describe);
                            $('#up_Source').val(data.T.source);
                            $('#up_Note').val(data.T.note);
                            $('#id_title').val(data.T.id);
                            $('#modalUpdate').modal("show");
                        } else {
                            alert(data.message);
                        }
                    }
                })
         }

         //Cập nhật thông tin người dùng
        $('#btnEdit').click(function () {
                let id = $('#id_title').val();
                let numTitle = $('#up_Title').val();
                let content = $('#up_Content').val();
                let describe = $('#up_Describe').val();
                let source = $('#up_Source').val();
                let note = $('#up_Note').val();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("UpdateTittle", "PlansAdvisor")',
                    data: {
                        id: id,
                        numTitle: numTitle,
                        content: content,
                        describe: describe,
                        source: source,
                        note: note
                    },
                    success: function (data) {
                            if (data.success == true) {
                                alert(data.message);
                                $('#modalUpdate').modal('hide');
                                dataTable.ajax.reload()
                            } else {
                                alert(data.message);
                            }
                        }
                     })
            })

        function HideModalUp() {
            $("#modalUpdate").modal("hide");
        }

        function HideModalCopy() {
            $("#modalCopy").modal("hide");
        }


         $(document).ready(function () {
        $('#btnUpload').click(function () {
            var formData = new FormData();
            var idtitle = $("#txtIDTitle").val();
            var content = $("#txtContent").val();
            var describe = $("#txtDescribe").val();
            var source = $("#txtSource").val();
            var note = $("#txtNote").val();
            formData.append("idtitle", idtitle);
            formData.append("content", content);
            formData.append("describe", describe);
            formData.append("source", source);
            formData.append("note", note);
            $.ajax({
                type: 'POST',
                url: '@Url.Action("CreateTitle", "PlansAdvisor")',
                contentType: false,
                processData: false,
                data: formData,
                success: function (data) {
                    if (data.success == false) {
                        alert(data.message);
                    } else {
                        $("#txtIDTitle").val("1");
                        $("#txtContent").val("");
                        $("#txtDescribe").val("");
                        $("#txtSource").val("");
                        $("#txtNote").val("");
                        $("#modalCreate").modal("hide");
                        alert(data.message);
                        dataTable.ajax.reload()
                    }
                }
             })
        })
         })

         //Sự kiện xóa
         function Delete(id) {
             if (confirm("Bạn thực sự muốn xóa sinh viên này?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "PlansAdvisor")',
                    type: 'POST',
                    data: {
                        id: id
                    },
                    success: function (data) {
                         if (data.success == true) {
                             alert(data.message);
                             dataTable.ajax.reload()
                         } else {
                             alert(data.message);
                         }
                    }
                })
            }
         }

        //Copy template
        $(document).on('click', "button[name=copy]", function () {
            input = document.getElementById("semester");
            let year = input.value.toUpperCase();
            if (confirm("Bạn muốn sao chép template năm " + year +"?")) {
            $.ajax({
                url: '@Url.Action("Copy", "PlansAdvisor")',
                type: 'POST',
                data: {
                    id: year
                },
                success: function (data) {
                     if (data.success == true) {
                         alert(data.message);
                         location.reload();
                     } else {
                         alert(data.message);
                     }
                }
            })
        }
        })
</script>

