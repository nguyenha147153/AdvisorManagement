    <script src="~/Assets/extra-libs/DataTables/datatables.min.js"></script>
    <script>



        function myFunction() {
            var input, filter, table, tr, td, i;
            input = document.getElementById("semester");
            filter = input.value.toUpperCase();
            table = document.getElementById("myTable");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[3];
                if (td) {
                    if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }

        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
        $("#zero_config").DataTable(); 
        function CreateTitle() {
            $("#modalCreate").modal("show");
        }

        function HideModal() {
            $("#modalCreate").modal("hide");
        }

         //Lấy thông tin người dùng để cập nhật
        $(document).on('click', "button[name=update]", function () {
            let id_title = $(this).closest('tr').attr('id');
            $.ajax({
                url:'@Url.Action("Update", "PlansAdvisor")' ,
                type: 'get',
                data: {
                    id: id_title
                },
                success: function (data) {
                    if (data.success == true) {
                        $('#up_Title').val(data.T.number_title);
                        $('#up_Content').val(data.T.content);
                        $('#up_Describe').val(data.T.describe);
                        $('#up_Source').val(data.T.source);
                        $('#up_Note').val(data.T.note);
                        $('#id_title').val(data.T.id);

                        $('#modalUpdate').modal("show");
                    } else {
                        alert(data.message);
                    }
                }
            })
        })

         //Cập nhật thông tin người dùng
        $('#btnEdit').click(function () {
                let id = $('#id_title').val();
                let numTitle = $('#up_Title').val();
                let content = $('#up_Content').val();
                let describe = $('#up_Describe').val();
                let source = $('#up_Source').val();
                let note = $('#up_Note').val();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("UpdateTittle", "PlansAdvisor")',
                    data: {
                        id: id,
                        numTitle: numTitle,
                        content: content,
                        describe: describe,
                        source: source,
                        note: note
                    },
                    success: function (data) {
                            if (data.success == true) {
                                alert(data.message);
                                $('#modalUpdate').modal('hide');
                                location.reload();
                            } else {
                                alert(data.message);
                            }
                        }
                     })
            })

        function HideModalUp() {
            $("#modalUpdate").modal("hide");
        }


         $(document).ready(function () {
        $('#btnUpload').click(function () {
            var formData = new FormData();
            var idtitle = $("#txtIDTitle").val();
            var content = $("#txtContent").val();
          /*  var HK1 = $("#txtHk1").val();
            var HK2 = $("#txtHk2").val();
            var HK3 = $("#txtHk3").val();*/
            var describe = $("#txtDescribe").val();
            var source = $("#txtSource").val();
            var note = $("#txtNote").val();
            formData.append("idtitle", idtitle);
            formData.append("content", content);
           /* formData.append("HK1", HK1);
            formData.append("HK2", HK2);
            formData.append("HK3", HK3);*/
            formData.append("describe", describe);
            formData.append("source", source);
            formData.append("note", note);
            $.ajax({
                type: 'POST',
                url: '@Url.Action("CreateTitle", "PlansAdvisor")',
                contentType: false,
                processData: false,
                data: formData,
                success: function (data) {
                    if (data.success == false) {
                        alert(data.message);
                    } else {
                        $("#modalCreate").modal("hide");
                        alert(data.message);
                        location.reload();
                    }
                }
             })
        })
         })

         //Sự kiện xóa
        $(document).on('click', "button[name=delete]", function () {
        let id_std = $(this).closest('tr').attr('id');
        if (confirm("Bạn thực sự muốn xóa sinh viên này?")) {
            $.ajax({
                url: '@Url.Action("Delete", "PlansAdvisor")',
                type: 'POST',
                data: {
                    id: id_std
                },
                success: function (data) {
                     if (data.success == true) {
                         alert(data.message);
                         location.reload();
                     } else {
                         alert(data.message);
                     }
                }
            })
        }
        })


    </script>

